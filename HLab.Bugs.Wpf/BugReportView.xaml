        <TextBlock x:Name="tbComment" Margin="0,10,0,0" Foreground="{DynamicResource HLab.Brushes.Foreground}">Comments :</TextBlock>
        <TextBox x:Name="txtComment" MinHeight="100" Margin="0,20">No comment</TextBox>
        <DockPanel>
            <ToggleButton 
                x:Name="ButtonShowDetail"
                DockPanel.Dock="Left" 
                Width="100" 
                IsChecked="false" 
                Checked="ToggleButton_OnChecked"
                Unchecked="ToggleButton_OnUnchecked"
                >Show Detail</ToggleButton>

            <StackPanel HorizontalAlignment="Right" DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="ButtonOk" FontWeight="Bold" Click="ButtonOk_OnClick" Margin="0,0,20,0"  Width="100" IsDefault="True">Ok</Button>
                <Button Foreground="{DynamicResource HLab.Brushes.Foreground}" Background="Green" x:Name="ButtonReopen" Click="ButtonReopen_OnClick" Width="100" IsDefault="True">Reopen</Button>
            </StackPanel>
        </DockPanel>
