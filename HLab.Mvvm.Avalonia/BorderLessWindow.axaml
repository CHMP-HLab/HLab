			<Grid x:Name="ResizeGrid">
				<Border
					Background="{DynamicResource HLab.Brushes.Header.Active.Background}"
					BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
					CornerRadius="8"
                        />

				<ContentControl/>
			</Grid>
		<!--</avalonia:ResizeGrid.NestedContent>
	</avalonia:ResizeGrid>-->

	<!--
