<UserControl x:Class="HLab.Mvvm.Views.YesNoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lang="clr-namespace:HLab.Mvvm.Lang"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <RadioButton Checked="Button_OnChecked" Click="Button_OnClick" MouseDown="Button_OnMouseDown" Name="ButtonNo" BorderBrush="#80000000">
            <lang:Localize  Id="{}{No}" />
        </RadioButton>
        <Label/>
        <RadioButton Checked="Button_OnChecked" Click="Button_OnClick" MouseDown="Button_OnMouseDown" Name="ButtonYes" BorderBrush="#80000000">
            <lang:Localize  Id="{}{Yes}" />
        </RadioButton>
    </StackPanel>
</UserControl>
